extends layout

block scripts
  script(src='/js/search.js')

block content
  div(class='row justify-content-center')
    if options !== null
      select(class='form-control' id='select-search' style='width: 20rem')
        if options.length == 0
          option(hidden disabled selected value) No Results
        else
          option(hidden disabled selected value) Select an Option
        for opt in options
          option(value=opt.toLowerCase().replace(' ', '-'))= opt
      if options.length == 0
        a(class='btn btn-danger ml-2' href='/search' role='button') Reset
      else
        button(type='button' class='btn btn-success ml-2' onclick='search()') Search
    else
      div(class='card')
        div(class='card-header')
        div(class='card-body clearfix')
          h4(class='card-title') PA-6 / 50 wt. % GF Chopped Unidirectional Tape
          img(class='float-right' alt='Image of material' src='http://cdspooner.com/csd/images/pa6_gf_chopped_tape.png')
          p
            b Material Notes:
            |  Original form was continuous, this scrap comes from trim-offs. Various shapes and sizes.
          p
            b Origin:
            |  Hardin Composites
          p
            b Manufacturing Method:
            a(href='javascript:void(0)')  Pultrusion
          p
            b Current Location:
            |  University of Alabama at Birmingham (UAB)
          p
            b Amount:
            |  500 lbs
          a(class='btn btn-primary mr-2' href='javascript:void(0)') Save
          a(class='btn btn-primary' href='javascript:void(0)') Query
